<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FontStyle">
    </style>

    <style name="FontStyle.Small">
        <item name="toolbar_title">10sp</item>
        <item name="feed_card_title">10sp</item>
        <item name="feed_card_description">7sp</item>
        <item name="feed_details_title">12sp</item>
        <item name="feed_details_description">8sp</item>
        <item name="search">8sp</item>
        <item name="menu_item">8sp</item>
        <item name="settings_item">8sp</item>
    </style>

    <style name="FontStyle.Medium">
        <item name="toolbar_title">20sp</item>
        <item name="feed_card_title">20sp</item>
        <item name="feed_card_description">14sp</item>
        <item name="feed_details_title">24sp</item>
        <item name="feed_details_description">16sp</item>
        <item name="search">16sp</item>
        <item name="menu_item">16sp</item>
        <item name="settings_item">16sp</item>
    </style>

    <style name="FontStyle.Large">
        <item name="toolbar_title">30sp</item>
        <item name="feed_card_title">30sp</item>
        <item name="feed_card_description">21sp</item>
        <item name="feed_details_title">36sp</item>
        <item name="feed_details_description">24sp</item>
        <item name="search">24sp</item>
        <item name="menu_item">24sp</item>
        <item name="settings_item">24sp</item>
    </style>

    <style name="FontStyle.ExtraLarge">
        <item name="toolbar_title">40sp</item>
        <item name="feed_card_title">40sp</item>
        <item name="feed_card_description">27sp</item>
        <item name="feed_details_title">48sp</item>
        <item name="feed_details_description">32sp</item>
        <item name="search">32sp</item>
        <item name="menu_item">32sp</item>
        <item name="settings_item">32sp</item>
    </style>

</resources>
